//Write a program to get the IP address of local host and identify if the address is IPV4 or IPV6.

import java.net.InetAddress;

public class QuestionOne {
    public static void main(String[] args) throws Exception {
    	
    	//Print System IP address
        InetAddress ip = InetAddress.getLocalHost();
        String address = ip.getHostAddress();
        System.out.println("IP Address of Localhost is " + address);
        
        //Check IP whether it is IPv4 or IPv 6
        byte[] bytes = ip.getAddress();
        if (bytes.length == 4) {
            System.out.println("It is IPv4.");
        } else if (bytes.length == 16) {
            System.out.println("It is IPv6.");
        } else {
            System.out.println("Neither IPv4 nor IPv6");
        }
    }
}
